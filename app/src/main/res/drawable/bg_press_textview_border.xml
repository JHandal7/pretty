<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="@android:integer/config_longAnimTime">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_light" />
            <stroke android:width="1px" android:color="@color/dividerColor" />
            <corners android:radius="@dimen/dimen_05x" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <stroke android:width="1px" android:color="@color/dividerColor" />
            <corners android:radius="@dimen/dimen_05x" />
        </shape>
    </item>
</selector>
