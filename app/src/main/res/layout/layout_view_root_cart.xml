<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginBottom="@dimen/dimen_1x"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="right|center_vertical"
            android:text="@string/quantity"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_xnormal"
            android:padding="@dimen/dimen_05x"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_xnormal"
            android:text=":"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_marginRight="@dimen/dimen_1x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="10"
            android:id="@+id/tv_quantity_foods"
            android:gravity="left|center_vertical"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_xnormal"
            android:padding="@dimen/dimen_05x"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="@color/dividerColor"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dimen_1x"
        android:layout_height="1dp"/>

    <LinearLayout
        android:paddingBottom="@dimen/dimen_1x"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_horizontal|center"
            android:text="@string/total"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_xlarge" />

        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_large"
            android:text=":"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_marginRight="@dimen/dimen_1x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_total_price"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/currency"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/tv_total_price"
                android:text="10"
                android:layout_marginLeft="@dimen/dimen_1x"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>