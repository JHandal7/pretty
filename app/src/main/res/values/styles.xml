<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Edit text -->
    <style name="EditTextBase" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- EditText themes -->
    <style name="EditTextNormal" parent="@style/EditTextBase">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/white</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="EditTextRed" parent="@style/EditTextBase">
        <!-- Custom EditText -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="EditTextBase.EditTextBlack">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/textColorSecondary</item>
    </style>

    <style name="EditTextGrey" parent="@android:style/Widget.EditText">
        <!-- Custom EditText -->
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="colorControlActivated">@color/light_grey</item>
        <item name="colorControlHighlight">@color/light_grey</item>
    </style>

    <!-- button -->
    <style name="ButtonTextPrimary">
        <item name="android:textSize">@dimen/text_size_xnormal</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="ToolBarStyle" parent="ToolBarStyle.Base" />

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!-- Custom Ratingbar -->
    <style name="ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/bg_ratingbar</item>
        <item name="android:minHeight">@dimen/dimen_3x</item>
        <item name="android:maxHeight">@dimen/dimen_3x</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
    </style>
    <!--  -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_down</item>
        <item name="android:windowExitAnimation">@anim/slide_out_up</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <!-- Button style -->
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">@dimen/dimen_x1x</item>
        <item name="android:paddingTop">@dimen/dimen_x1x</item>
        <item name="android:paddingLeft">@dimen/dimen_2x</item>
        <item name="android:paddingRight">@dimen/dimen_2x</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/bg_pressed_color_red</item>
    </style>


    <style name="Button.Grey">
        <item name="android:background">@drawable/bg_pressed_grey</item>
    </style>

</resources>
